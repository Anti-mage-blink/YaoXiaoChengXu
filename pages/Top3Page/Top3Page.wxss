.page-container {
  height: 100vh;
  width: 750rpx;

  display: flex;
  flex-direction: column;
  justify-content: center;
}

.video-container {
  height: 90%;
  width: 100%;
}

.bottom-bar {
  height: 10%;
  width: 100%;
  background-color: #000;

  display: flex;
  flex-direction: row;
  align-items: center;
}

.video {
  height: 100%;
  width: 100%;
}

button::after {
  border: none !important; /* 去除默认边框 */
}

.share-button {
  height: 60%;
  width: 100rpx;
  min-width: 0 !important;
  border-radius: 50rpx;

  margin: 0 !important; /* 清除默认外边距 */
  padding: 0; /* 清除默认内边距 */
  line-height: normal; /* 重置行高 */
  
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.share-font {
  font-size: 50rpx;
  font-family:cursive;
}