.page-container {
  height: 100vh;
  width: 750rpx;

  display: flex;
  flex-direction: column;
  justify-content: center;
}

.video-container {
  height: 92%;
  width: 100%;
}

.bottom-bar{
  height: 8%;
  width: 100%;
  background-color: #000;

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.video {
  height: 100%;
  width: 100%;
}

.share-button {
  height: 60%;
  width: 180rpx !important;
  border-radius: 50rpx;

  position: relative;
  left: 325rpx;
  transform: translateX(-50%); /* 中心点修正 */


  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.share-font {
  font-size: 40rpx;
  font-family: cursive;
}