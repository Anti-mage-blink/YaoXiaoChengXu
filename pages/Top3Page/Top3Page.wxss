.page-container {
  height: 100vh;
  width: 750rpx;

  display: flex;
  flex-direction: column;
  justify-content: center;
}

.video-container {
  height: 92%;
  width: 100%;
}

.bottom-bar{
  height: 8%;
  width: 100%;
  background-color: #000;

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.video {
  height: 100%;
  width: 100%;
}

.share-button {
  position: relative;
  left: 200rpx;

  height: 70%;
  width: 200rpx !important;
  border-radius: 50rpx;

  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;

  padding-left: 0rpx;
  padding-right: 0rpx;
}

.weixin-icon {
  width: 50rpx;
  margin-left: 30rpx;
}

.share-font {
  margin-left: 10rpx;

  font-size: 40rpx;
  font-family: sans-serif;

}