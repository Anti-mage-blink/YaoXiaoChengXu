.page-container {
  height: 100vh;
  width: 750rpx;

  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.top-container {
  height: 30%;
  width: 100%;
}

.swiper,
.swiper-item,
.swiper-image {
  height: 100%;
  width: 100%;
}

.mid-container {
  height: 40%;
  width: 100%;

  padding-left: 0 0 0 0;

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.upload-button {
  height: 60% !important;
  width: 80% !important;

  margin-left: 0;
  margin-right: 0;

  position: relative;
}


.upload-image {
  height: 100%;
  width: 100%;

  border-radius: 50rpx;
}

.upload-text {
  position: absolute;
  left: 0rpx;
  top: 220rpx;

  height: 40%;
  width: 100%;
  z-index: 10;

  font-family: serif;
  color:white;
  font-size: 40rpx;
}



.bottom-container {
  height: 30%;
  width: 100%;

  padding: 0 0 0 0;


}

.record-button {
  height: 30%;
  width: 80% !important;
  border-radius: 50rpx;

  background-color: rgb(212, 205, 205);

  padding: 0 0 0 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.record-image {
  height: 80%;
  width: 95rpx;

  margin-left: 50rpx;
  margin-right: 0rpx;
}

.record-text {
  margin-left: 100rpx;

  font-family: serif;
  font-size: 40rpx;
}